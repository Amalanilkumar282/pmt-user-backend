    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "projectId",
      "value": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
      "type": "string"
    }
  ]
}
